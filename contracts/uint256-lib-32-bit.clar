            (i6 (mod (to-uint (if (< i6 0) (+ (to-int uint32-max-limit) i6) i6)) uint32-max-limit))
            (i7 (mod (to-uint (if (< i7 0) (+ (to-int uint32-max-limit) i7) i7)) uint32-max-limit))
